<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>caminho do log/arquivo.log</file>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>